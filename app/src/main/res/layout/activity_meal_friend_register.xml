<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".mealfriend.MealFriendRegisterActivity">
	
	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:layout_margin="10dp"
				android:layout_marginTop="30dp"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:fontFamily="@font/suitthin"
					android:gravity="center"
					android:text="식사 친구 모으기"
					android:textSize="40dp" />
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
				android:gravity="center"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="5dp"
					android:fontFamily="@font/suitbold"
					android:text="성함"
					android:textSize="20dp" />
			
			<TextView
					android:id="@+id/name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/round"
					android:backgroundTint="#E4E4E4"
					android:fontFamily="@font/suitmedium"
					android:paddingStart="10dp"
					android:paddingTop="5dp"
					android:paddingEnd="10dp"
					android:paddingBottom="5dp"
					android:text="이름"
					android:textSize="18dp" />
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
				android:gravity="center"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="5dp"
					android:fontFamily="@font/suitbold"
					android:text="주소"
					android:textSize="20dp" />
			
			<TextView
					android:id="@+id/address"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/round"
					android:backgroundTint="#E4E4E4"
					android:fontFamily="@font/suitmedium"
					android:paddingStart="10dp"
					android:paddingTop="5dp"
					android:paddingEnd="10dp"
					android:paddingBottom="5dp"
					android:text="주소"
					android:textSize="18dp" />
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="30dp"
				android:gravity="center"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="5dp"
					android:fontFamily="@font/suitbold"
					android:text="시간"
					android:textSize="20dp" />
			
			<TextView
					android:id="@+id/time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/round"
					android:backgroundTint="#E4E4E4"
					android:fontFamily="@font/suitmedium"
					android:paddingStart="10dp"
					android:paddingTop="5dp"
					android:paddingEnd="10dp"
					android:paddingBottom="5dp"
					android:text="시간"
					android:textSize="18dp" />
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="30dp"
				android:gravity="center"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="5dp"
					android:fontFamily="@font/suitbold"
					android:text="초대 인원 수"
					android:textSize="20dp" />
			
			<NumberPicker
					android:id="@+id/memNumber"
					android:layout_width="match_parent"
					android:layout_height="93dp"
					android:background="@drawable/round"
					android:backgroundTint="#E4E4E4"
					android:fontFamily="@font/suitmedium"
					android:paddingStart="10dp"
					android:paddingTop="5dp"
					android:paddingEnd="10dp"
					android:paddingBottom="5dp"
					android:text=""
					android:textSize="18dp"/>
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="30dp"
				android:gravity="center"
				android:orientation="vertical">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="5dp"
					android:fontFamily="@font/suitbold"
					android:text="메모"
					android:textSize="20dp" />
			
			<EditText
					android:id="@+id/memo"
					android:layout_width="match_parent"
					android:layout_height="72dp"
					android:background="@drawable/round"
					android:backgroundTint="#E4E4E4"
					android:fontFamily="@font/suitmedium"
					android:gravity="center|left"
					android:paddingStart="10dp"
					android:paddingTop="5dp"
					android:paddingEnd="10dp"
					android:paddingBottom="5dp"
					android:hint="메모를 적어주세요."
					android:textSize="18dp"/>
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:layout_margin="30dp"
				android:gravity="center">
			
			<Button
					android:id="@+id/mealFriendButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:background="@drawable/round"
					android:fontFamily="@font/suitmedium"
					android:paddingStart="20dp"
					android:paddingTop="10dp"
					android:paddingEnd="20dp"
					android:paddingBottom="10dp"
					android:text="식사 친구 모으기"
					android:textColor="@color/white"
					android:textSize="20dp" />
		</LinearLayout>
	
	</GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>